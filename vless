

# ===========================
# OpenClash 配置文件模板
# ===========================

# 常规信息
port: 7890               # HTTP 代理端口
socks-port: 7891         # SOCKS5 代理端口
redir-port: 7892         # 重定向端口
tproxy-port: 7893        # TProxy 端口
mode: Rule               # 代理模式: Rule / Global / Direct
log-level: info          # 日志等级: info / warning / error / debug
allow-lan: true          # 是否允许局域网连接
bind-address: "*"        # 绑定地址（* 代表所有）
external-controller: 0.0.0.0:9090   # 控制面板监听端口
secret: ""               # 面板密钥（可选）

# DNS 设置
dns:
  enable: true
  listen: 0.0.0.0:1053
  ipv6: false
  enhanced-mode: fake-ip   # redir-host / fake-ip
  fake-ip-range: 198.18.0.1/16
  default-nameserver:
    - 223.5.5.5
    - 119.29.29.29
  nameserver:
    - https://dns.alidns.com/dns-query
    - https://doh.pub/dns-query
  fallback:
    - https://1.1.1.1/dns-query
    - https://8.8.8.8/dns-query
  fallback-filter:
    geoip: true
    geoip-code: CN

